function createNavDropdownIcon() {
    const svgNS = 'http://www.w3.org/2000/svg';

    const svg = document.createElementNS(svgNS, 'svg');
    svg.setAttribute('class', 'c-navDropdown__link-icon c-navDropdown__link-icon--inverted');
    svg.setAttribute('width', '17');
    svg.setAttribute('height', '7');
    svg.setAttribute('viewBox', '0 0 17 7');
    svg.setAttribute('fill', 'none');

    const path = document.createElementNS(svgNS, 'path');
    path.setAttribute('d', 'M16.27 3.76146C16.4144 3.61706 16.4144 3.38294 16.27 3.23854L13.9169 0.885377C13.7725 0.740975 13.5383 0.740975 13.3939 0.885377C13.2495 1.02978 13.2495 1.2639 13.3939 1.4083L15.4856 3.5L13.3939 5.5917C13.2495 5.7361 13.2495 5.97022 13.3939 6.11462C13.5383 6.25902 13.7725 6.25902 13.9169 6.11462L16.27 3.76146ZM0 3.86976H16.0086V3.13024H0V3.86976Z');
    path.setAttribute('fill', '#005FF9');

    svg.appendChild(path);
    return svg;
}

document.addEventListener('DOMContentLoaded', () => {
	document.querySelectorAll('.new-topic-class h2').forEach(h2 => {
	  const newLabel = document.createElement('span');

	  newLabel.innerText = 'NEW';

	  newLabel.style.backgroundColor = 'orange';
	  newLabel.style.color = 'white';
	  newLabel.style.padding = '2px 5px';
	  newLabel.style.marginLeft = '10px';
	  newLabel.style.fontSize = '12px';
	  newLabel.style.borderRadius = '3px';

	  h2.appendChild(newLabel);
	});
	
	const h2Elements = document.querySelectorAll('.ecc-nav-link h2');

	h2Elements.forEach(h2 => {
		const svgDiv = document.createElement('div');
		svgDiv.classList.add('svg-link-icon');
		svgDiv.appendChild(createNavDropdownIcon());

		h2.appendChild(svgDiv);
	});
});

